<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/conlay_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-15dp"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        android:background="@drawable/edit_rectangle_bg">

        <ImageView
            android:id="@+id/img_avt"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Trần Triệu Thiên"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_avt"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_Status"
            android:layout_width="9dp"
            android:layout_height="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_online"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            app:layout_constraintStart_toStartOf="@id/tv_username"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/inter_regular"
            android:text="Đang hoạt động"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/blue_app"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/img_Status"
            app:layout_constraintTop_toBottomOf="@id/tv_username"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/toolBar"
            android:layout_width="166dp"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="15dp">

            <ImageButton
                android:id="@+id/imgBtn_Call"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_phone"
                android:layout_weight="3"/>

            <ImageButton
                android:id="@+id/imgBtn_VideoCall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_videocall"
                android:layout_weight="3"/>

            <ImageButton
                android:id="@+id/imgBtn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_close"
                android:layout_weight="3"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_chats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit_rectangle_bg"
        app:layout_constraintTop_toBottomOf="@id/conlay_header"
        app:layout_constraintBottom_toTopOf="@id/ll_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="15dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:stackFromEnd="true"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <ProgressBar
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:id="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_input"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/et_textMessage"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edit_toolbar_bg"
            android:backgroundTint="@color/light_grey"
            android:hint="Nhập tin nhắn"
            android:maxLines="1"
            android:scaleType="fitCenter"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:layout_width="@dimen/_40ssp"
            android:layout_height="@dimen/_40ssp"
            android:id="@+id/imgBtn_send"
            android:background="@drawable/edit_shadow_cycle_bg"
            android:src="@drawable/ic_baseline_send_24"
            android:paddingStart="5dp"
            tools:ignore="RtlSymmetry"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>