<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_item_bg"
    android:paddingTop="15dp"
    android:paddingStart="15dp"
    android:paddingBottom="15dp"
    android:layout_marginBottom="15dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_event_name"
        android:text="Sự kiện"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_event_id"
        android:layout_toEndOf="@id/tv_event_name"
        android:layout_marginStart="5dp"
        android:text="#1"
        android:fontFamily="@font/inter_regular"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_event_dateStart"
        android:layout_below="@+id/tv_event_name"
        android:text="8/1/2023"
        android:fontFamily="@font/inter_regular"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_space"
        android:layout_below="@id/tv_event_name"
        android:layout_toEndOf="@+id/tv_event_dateStart"
        android:text=" - "
        android:fontFamily="@font/inter_regular"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_event_dateEnd"
        android:layout_below="@id/tv_event_name"
        android:layout_toEndOf="@+id/tv_space"
        android:text="8/2/2023"
        android:fontFamily="@font/inter_regular"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_event_participant"
        android:layout_below="@id/tv_event_dateStart"
        android:text="Tất cả nhân viên"
        android:fontFamily="@font/inter_regular"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_event_status"
        android:layout_below="@id/tv_event_participant"
        android:text="Đang diễn ra"
        android:fontFamily="@font/inter_bold"
        android:textSize="15sp"
        android:textColor="@color/blue_app"
        android:gravity="center"/>

    <View
        android:id="@+id/view_statusEvent"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_event_name"
        android:layout_alignBottom="@+id/tv_event_status"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_cycle_bg"/>

</RelativeLayout>