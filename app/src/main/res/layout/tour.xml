<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conlay_header"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgBtn_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/edit_shadow_cycle_bg"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:id="@+id/tv_tour_title"
            app:layout_constraintStart_toEndOf="@id/imgBtn_logo"
            app:layout_constraintEnd_toStartOf="@id/imgBtn_notice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_search"
            android:text="TOURS"
            android:fontFamily="@font/inter_bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"/>


        <ImageButton
            android:id="@+id/imgBtn_notice"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/edit_shadow_cycle_bg"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_notice"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tour_title"
            android:background="@drawable/edit_shadow_rectangle_bg"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:elevation="4dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Tìm kiếm trên BoTo"
            android:paddingStart="15dp"
            android:textColorHint="@color/hint"
            android:textSize="15sp"
            android:inputType="text"
            tools:ignore="InvalidId,RtlSymmetry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Spinner
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:id="@+id/sn_time"
        app:layout_constraintTop_toBottomOf="@id/conlay_header"
        app:layout_constraintStart_toStartOf="@id/conlay_header"
        android:layout_marginTop="15dp"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="40dp"
        android:background="@drawable/edit_spinner_bg"/>

    <Spinner
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:id="@+id/sn_modeView"
        app:layout_constraintTop_toBottomOf="@id/conlay_header"
        app:layout_constraintStart_toEndOf="@id/sn_time"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="40dp"
        android:background="@drawable/edit_spinner_bg"
        tools:ignore="RtlSymmetry" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgBtn_add"
        app:layout_constraintTop_toBottomOf="@id/conlay_header"
        app:layout_constraintEnd_toStartOf="@id/imgBtn_filter"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edit_shadow_cycle_bg"
        android:src="@drawable/img_add"
        android:scaleType="fitCenter"
        android:paddingTop="7dp"
        android:paddingStart="6dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgBtn_filter"
        app:layout_constraintTop_toBottomOf="@id/conlay_header"
        app:layout_constraintEnd_toEndOf="@id/conlay_header"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_shadow_cycle_bg"
        android:src="@drawable/img_filter"
        android:scaleType="fitCenter"
        android:paddingTop="8dp"
        android:paddingStart="7dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/fl_viewMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sn_time"
        app:layout_constraintBottom_toTopOf="@id/toolBar"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="80dp"
        android:id="@+id/toolBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-28dp"
        android:background="@drawable/edit_toolbar_bg"
        android:orientation="horizontal"
        tools:ignore="InOrMmUsage">

        <ImageButton
            android:id="@+id/imgBtn_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7.5mm"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4mm"
            android:background="@color/blue_app"
            android:scaleType="fitCenter"
            android:src="@drawable/img_home" />

        <ImageButton
            android:id="@+id/imgBtn_book"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4mm"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4mm"
            android:background="@color/blue_app"
            android:scaleType="fitCenter"
            android:src="@drawable/img_book" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgBtn_event"
            android:layout_marginTop="6dp"
            android:layout_marginStart="5mm"
            android:layout_marginEnd="4mm"
            android:src="@drawable/img_event"
            android:scaleType="fitCenter"
            android:background="@color/blue_app"/>

        <ImageButton
            android:id="@+id/imgBtn_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4mm"
            android:layout_marginTop="6dp"
            android:background="@color/blue_app"
            android:scaleType="fitCenter"
            android:src="@drawable/img_user" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>