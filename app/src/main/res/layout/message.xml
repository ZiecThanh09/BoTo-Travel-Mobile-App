<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageButton
        android:id="@+id/imgBtn_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_shadow_cycle_bg"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="Messages"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/imgAvt"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="377dp"
        android:layout_height="56dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/edit_shadow_rectangle_bg"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:elevation="4dp"
        android:fontFamily="@font/inter_regular"
        android:hint="  Bạn cần tìm ai?"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <ImageButton
        android:id="@+id/imgAvt"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edit_shadow_cycle_bg"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/avt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sn_time"
        app:layout_constraintTop_toBottomOf="@id/imgBtn_logo"
        app:layout_constraintStart_toStartOf="@id/imgBtn_logo"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_shadow_rectangle_bg"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sn_modeView"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintStart_toEndOf="@id/sn_time"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/edit_shadow_rectangle_bg"/>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:id="@+id/toolBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_shadow_rectangle_bg"
        android:orientation="horizontal"
        android:gravity="center"
        tools:ignore="InOrMmUsage">

        <ImageButton
            android:id="@+id/btn_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:scaleType="fitCenter"
            android:background="@color/white"
            android:src="@drawable/img_mess"
            android:layout_weight="3"/>

        <ImageButton
            android:id="@+id/btn_phone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/img_phone"
            android:layout_weight="3"/>

        <ImageButton
            android:id="@+id/btn_users"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/img_users"
            android:layout_weight="3"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ListMess"
        app:layout_constraintBottom_toTopOf="@id/toolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>