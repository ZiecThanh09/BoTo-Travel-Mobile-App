<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.marsad.BoToTravel.chat.ChatUsersActivity"
    tools:ignore="HardcodedText">

    <ImageButton
        android:id="@+id/imgBtn_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_shadow_cycle_bg"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_logo"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Messages"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_shadow_cycle_bg"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/warn_sign"
        android:layout_alignParentRight="true"/>


    <EditText
        android:id="@+id/searchET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBtn_logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:background="@drawable/edit_shadow_rectangle_bg"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/colorGreyDark"
        android:elevation="4dp"
        android:fontFamily="@font/inter_regular"
        android:hint="Tìm kiếm..."
        android:inputType="text"
        android:padding="12dp"
        android:paddingStart="15dp"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        tools:ignore="UnusedAttribute" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="411dp"
        android:layout_below="@+id/searchET"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:id="@+id/toolBar"
        android:background="@drawable/edit_shadow_rectangle_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:ignore="InOrMmUsage">

        <ImageButton
            android:id="@+id/btn_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:scaleType="fitCenter"
            android:background="@color/white"
            android:src="@drawable/img_mess"
            android:layout_weight="3"/>

        <ImageButton
            android:id="@+id/btn_phone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/img_phone"
            android:layout_weight="3"/>

        <ImageButton
            android:id="@+id/btn_users"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/img_users"
            android:layout_weight="3"/>
    </LinearLayout>


</RelativeLayout>